.single-container
  %header.single-header
    %h1
      %a
        = image_tag 'logo.svg'
  %main.single-main
    %section.l-single-container
      %h2.l-single-container__head 新規会員登録
      .l-single-inner
        .l-single-content
          = link_to new_user_registration_path, class:'btn-default btn-mail' do
            = fa_icon 'envelope', class: 'icon-mail'
            メールアドレス
          %button.btn-default.btn-sns.btn-sns-facebook
            %i.fab.fa-facebook-square.icons__facebook
            facebookでログイン
          %button.btn-default.btn-sns.btn-sns-google
            %i.fab.fa-google-plus-square.icon-google-plus-square
            Googleでログイン
  = render 'shared/footer2'
  = link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path

