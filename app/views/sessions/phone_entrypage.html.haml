        /     .form-group
        /       = f.label :ニックネーム
        /       %span.form-require 必須
        /       = f.text_field :nickname, autofocus: true, placeholder: '例)メルカリ太郎', class: 'login-input-text input-default'
        /     .form-group
        /       = f.label :メールアドレス
        /       %span.form-require 必須
        /       = f.email_field :email, autofocus: true, autocomplete: "email",placeholder: 'PC・携帯どちらでも可', type:'email', class: 'login-input-text input-default'
        /     .form-group
        /       = f.label :パスワード
        /       %span.form-require 必須
        /       = f.password_field :password, autocomplete: "new-password",placeholder: '６文字以上', type:'password',class: 'login-input-text input-default'
