.single-container
  %header.single-header
    %h1
      %a
        = image_tag 'logo.svg'
    %nav.progress-bar.signup-bar
      %ol.clearfix
        %li.active
          会員情報
          = current_user.id
          .progress-status
        %li
          電話番号認証
          .progress-status
        %li
          住所入力
          .progress-status
        %li
          支払い方法
          .progress-status
        %li
          完了
          .progress-status
  %main.single-main
    %section.l-single-container
      %h2.l-single-container__head 支払い方法
      .l-single-inner
        %form#charge-form{action: "/cards", method: "POST"}
          .l-single-content
            .form-group
              %label カード番号
              %span.form-require 必須
              %input.number.login-input-text.input-default{maxlength: "16", name: "number", placeholder: "半角英数", type: "text",id: "payment_card_no", value: 4242424242424242}/
            .form-group
              %label 有効期限
              %span.form-require 必須
              %input.exp_month.login-input-text.input-default{maxlength: "2", name: "exp_month", placeholder: "月", type: "text",id: "payment_card_expire_mm", value: 12}/
              %input.exp_year.login-input-text.input-default{maxlength: "4", name: "exp_year", placeholder: "年", type: "text",id: "payment_card_expire_yy", value: 2022}/
            .form-group
              %label セキュリティコード
              %span.form-require 任意
              %input.cvc.login-input-text.input-default{maxlength: "3", name: "cvc", placeholder: "カード背面４桁もしくは３桁の番号", type: "text",id: "payment_card_security_code", value: 123}/
            %button.btn-default.btn-red{type: "submit", id: "card-save"} 次に進む
  = render 'shared/footer2'
